---
import type { Section } from "../../models/Models.ts";
import AOS from "../AOS.astro";
import SectionContentWrapper from "../SectionContentWrapper.astro";
import Video from "../Video.astro";
interface Props {
  section: Section;
}
const { section } = Astro.props;
const { title, subtitle, description, subsections } = section;
---

<SectionContentWrapper title={section.title} sectionId={section.sectionId} backgroundColor="bg-body">
  <div class="row p-lg-4 flex-column flex-md-row-reverse align-items-center justify-content-center">
    <div class="col col-lg-6">
      <AOS delay={400}>
        <Video
          url="https://www.youtube.com/embed/9EbtLU6NyCI?si=ro6CzVbcku7dOG0p&controls=0"
        />
      </AOS>
    </div>
    <div class="col col-lg-6">
      <AOS>
        <p class="lead fw-bold">
          {subtitle}
        </p>
        <div>
          <div set:html={description.html} />
        </div>
      </AOS>
    </div>
  </div>
  {
    subsections.length !== 0 && (
      <div class="row p-lg-4">
        <div class="col-lg-6">
          <AOS>
            <iframe
              width="100%"
              height="150"
              allow="autoplay"
              src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/905103778&color=%237b149a&auto_play=false&hide_related=true&show_comments=false&show_user=false&show_reposts=false&show_teaser=false"
            />
          </AOS>
        </div>
        <div class="col-lg-6">
          <AOS delay={400}>
            <p class="lead fw-bold">{subsections.at(0).title}</p>
            <p>{subsections.at(0).description}</p>
          </AOS>
        </div>
      </div>
    )
  }
</SectionContentWrapper>
